
@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg ">


        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="titulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formulario" name="formulario" enctype="multipart/form-data">
                    <div class="mb-3 mt-2 row">

                        <div class="col-sm-8">

                            <div class="col ms-auto me-auto">

                                <label class="form-label">Nombre</label>
                                <input class="form-control validador" type="text" name="nombre" id="nombre" />
                                <div class="invalid-feedback "> * Campo requerido </div>

                            </div>

                        </div>

                     

                    </div>

                    <div class="row mt-2">


                        <div class="col-sm ms-auto me-auto">

                            <label class="form-label">Usuario</label>
                            <input class="form-control validador" type="text" name="usuario" id="usuario" />
                            <div class="invalid-feedback "> * Campo requerido </div>

                        </div>


                        <div class="col-sm-6 ">

                              <label class="form-label" style="visibility: hidden">Ciudad</label>

                            <select name="idRol" id="idRol" class="form-select validador">

                                <option value="">--Seleccione una Ciudad--</option>



                            </select>

                            <div class="invalid-feedback "> * Campo requerido </div>

                        </div>
                    </div>







                




                    <div class="row mt-3">


                        <div class="col-sm ms-auto me-auto">

                            <label class="form-label">Clave</label>
                            <input class="form-control validador " type="password" name="clave" id="clave" />
                            <div class="invalid-feedback "> * Campo requerido </div>

                        </div>



                        <div class="col ms-auto me-auto">

                            <label class="form-label">Confirmar Clave</label>
                            <input maxlength="10" class="form-control validador  " type="password" name="confirmar" id="confirmar" />
                            <div class="invalid-feedback "> * Campo requerido </div>

                        </div>

                    </div>
                    <div>
                    </div>

                </form>



            </div>
            <div class="modal-footer">
                <button name="salir" id="salir" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Salir</button>
                <button name="guardar" id="guardar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/sitePerfil.js" defer></script>
